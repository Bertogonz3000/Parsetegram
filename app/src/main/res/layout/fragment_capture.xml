<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CaptureFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/login_gradient"
        android:layout_above="@+id/photoButton"/>

    <Button
        android:id="@+id/photoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        android:layout_above="@id/etDescription"
        android:layout_centerInParent="true"
        android:background="@drawable/button_bg_transparent_blue"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Enter a description"
        android:layout_above="@id/createButton"
        />

    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_bg_transparent_blue"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        />

    </RelativeLayout>


</FrameLayout>