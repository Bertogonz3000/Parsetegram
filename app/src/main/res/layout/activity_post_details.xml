<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailsActivity">


    <ImageView
        android:id="@+id/postDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/postDetailsDescription"
        android:layout_below="@id/postDetailsUsername"
        android:padding="5dp"
        android:src="@drawable/login_gradient"
        />

    <TextView
        android:id="@+id/postDetailsUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/postDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:padding="5dp"/>

</RelativeLayout>