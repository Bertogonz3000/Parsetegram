<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailsActivity">


    <ImageView
        android:id="@+id/postDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_gradient"


        android:layout_above="@id/postDetailsDescription"
        android:layout_below="@id/postDetailsUsername"
        />

    <ImageView
        android:id="@+id/profileImageDetails"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/postDetailsUsername"


        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/postDetailsUsername"
        android:src="@drawable/profile_icon" />

    <TextView
        android:id="@+id/tvPostTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Failed to get timestamp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"

        android:layout_alignRight="@id/postDetailsImage"
        android:layout_alignTop="@id/postDetailsDescription"/>

    <TextView
        android:id="@+id/postDetailsUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:textStyle="bold"


        android:layout_toRightOf="@id/profileImageDetails"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/postDetailsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:layout_marginRight="20dp"

        android:layout_toLeftOf="@id/tvPostTimeStamp"
        android:gravity="top"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>